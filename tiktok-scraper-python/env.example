# TikTok Scraper Python 환경변수 설정

# =============================================================================
# 데이터베이스 설정
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tiktok_scraper
DB_USER=postgres
DB_PASSWORD=your_password

# 데이터베이스 연결 풀 설정
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=30
DB_STATEMENT_TIMEOUT=30000
DB_IDLE_IN_TRANSACTION_TIMEOUT=30000

# =============================================================================
# API 설정
# =============================================================================
# 인플루언서 API 설정
INFLUENCER_API_URL=https://api.example.com/influencers
INFLUENCER_API_KEY=your_influencer_api_key

# API 사용 여부 (false면 테스트 목록 사용)
USE_API=false

# 테스트용 인플루언서 목록 (API 연동 전 사용)
# TEST_INFLUENCER_IDS=["charlidamelio", "bellapoarch", "addisonre", "zachking", "spencerx"]

# 결과 전송 API 설정
RESULT_API_URL=https://api.example.com/results
RESULT_API_KEY=your_result_api_key

# HTTP 설정
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_DELAY=2.0
API_USER_AGENT=TikTok-Scraper/1.0.0

# =============================================================================
# TikTok 스크래핑 설정
# =============================================================================
# TikTok URL 설정
TIKTOK_BASE_URL=https://www.tiktok.com
TIKTOK_API_URL=https://api.tiktok.com

# 스크래핑 설정
TIKTOK_HEADLESS=true
TIKTOK_SLOW_MO=100
TIKTOK_VIEWPORT_WIDTH=1920
TIKTOK_VIEWPORT_HEIGHT=1080

# 스크롤 설정
TIKTOK_SCROLL_PAUSE_TIME=2.0
TIKTOK_MAX_SCROLL_ATTEMPTS=10
TIKTOK_SCROLL_DISTANCE=1000

# 데이터 수집 설정
TIKTOK_MAX_POSTS_PER_INFLUENCER=100
TIKTOK_MAX_FOLLOWERS_PER_INFLUENCER=500
TIKTOK_MAX_COMMENTS_PER_POST=200

# 대기 시간 설정
TIKTOK_PAGE_LOAD_TIMEOUT=30
TIKTOK_ELEMENT_WAIT_TIMEOUT=10
TIKTOK_NAVIGATION_TIMEOUT=30

# 재시도 설정
TIKTOK_MAX_RETRIES_ON_FAILURE=3
TIKTOK_RETRY_DELAY_ON_FAILURE=5.0

# 쿠키 및 세션 설정
TIKTOK_USE_COOKIES=false
TIKTOK_COOKIE_FILE=cookies.json

# 프록시 설정
TIKTOK_USE_PROXY=false
TIKTOK_PROXY_SERVER=

# 스크린샷 설정
TIKTOK_TAKE_SCREENSHOTS=false
TIKTOK_SCREENSHOT_DIR=screenshots

# =============================================================================
# 성능 설정
# =============================================================================
# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/tiktok_scraper.log

# 성능 설정
MAX_CONCURRENT_TASKS=3
REQUEST_DELAY=2.0
TIMEOUT=30

# 재시도 설정
MAX_RETRIES=3
RETRY_DELAY=5.0

# 데이터 설정
BATCH_SIZE=100
MAX_ITEMS_PER_INFLUENCER=1000

# =============================================================================
# 개발/디버깅 설정
# =============================================================================
# 개발 모드 (헤드리스 비활성화)
# TIKTOK_HEADLESS=false

# 디버그 모드 (상세 로깅)
# LOG_LEVEL=DEBUG

# 테스트 모드 (제한된 데이터 수집)
# TIKTOK_MAX_POSTS_PER_INFLUENCER=10
# TIKTOK_MAX_FOLLOWERS_PER_INFLUENCER=50
# TIKTOK_MAX_COMMENTS_PER_POST=20

# =============================================================================
# 고급 설정 (일반적으로 변경하지 않음)
# =============================================================================
# User-Agent 목록 (자동 선택됨)
# TIKTOK_USER_AGENTS=["Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"]

# 브라우저 인수 (자동 설정됨)
# TIKTOK_BROWSER_ARGS=["--no-sandbox", "--disable-setuid-sandbox", "--disable-dev-shm-usage"]

# =============================================================================
# 주의사항
# =============================================================================
# 1. DB_PASSWORD를 실제 데이터베이스 비밀번호로 변경하세요
# 2. INFLUENCER_API_KEY와 RESULT_API_KEY를 실제 API 키로 변경하세요
# 3. TIKTOK_HEADLESS=false로 설정하면 브라우저 창이 열려서 디버깅이 가능합니다
# 4. 개발 중에는 LOG_LEVEL=DEBUG로 설정하여 상세한 로그를 확인하세요
# 5. 프로덕션 환경에서는 TIKTOK_TAKE_SCREENSHOTS=false로 설정하세요 